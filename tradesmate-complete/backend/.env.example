# TradesMate Backend Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI Configuration (Required)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=your-openai-base-url-here

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-use-long-random-string
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///database/app.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/tradesmate

# Google Calendar Integration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/calendar/callback

# Payment Processing (Future)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# File Upload Configuration
MAX_CONTENT_LENGTH=26214400  # 25MB in bytes
UPLOAD_FOLDER=uploads
ALLOWED_AUDIO_EXTENSIONS=mp3,wav,m4a,webm,ogg,flac
ALLOWED_IMAGE_EXTENSIONS=png,jpg,jpeg,gif,bmp,webp

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

