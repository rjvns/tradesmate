# TradesMate Backend Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
# For local development (SQLite) - leave DATABASE_URL empty
# For production (PostgreSQL) - set your database URL
DATABASE_URL=

# Example PostgreSQL URLs:
# DATABASE_URL=postgresql://username:password@localhost:5432/tradesmate
# DATABASE_URL=postgresql://user:pass@railway.app:5432/railway (Railway example)

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# File Upload Limits
MAX_CONTENT_LENGTH=26214400

# API Keys (if needed)
OPENAI_API_KEY=
GOOGLE_CALENDAR_API_KEY=

# CORS Settings (if needed)
FRONTEND_URL=http://localhost:5173
